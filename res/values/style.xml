<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainNav">
        <item name="android:textColor">#333333</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:paddingTop">5dp</item>
    </style>
    <style name="BasicList">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#ffffff</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">#666666</item>
        <item name="android:dividerHeight">1dp</item>
    </style>
    <style name="BasicRow">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="HeaderRow">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">#F6B32D</item>
        <item name="android:clickable">false</item>
    </style>
    <style name="ForecastHeader">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">#eeeeee</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="ForecastText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ForecastTextSmall" parent="@style/ForecastText">
        <item name="android:textSize">10sp</item>
    </style>
    <style name="ForecastContainer">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#000000</item>
    </style>
    
    <style name="ScheduleSectionRow">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">#ccc</item>
    </style>
    
    <style name="ScheduleEventRow">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">#ccc</item>
    </style>
    
    <style name="RowText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="RowDetail" parent="@style/ForecastText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
    </style>
</resources>